<%= nested_form_for(@thumbnail, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @thumbnail.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@thumbnail.errors.count, "error") %> prohibited this thumbnail from being saved:</h4>

      <ul>
      <% @thumbnail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :thumb_title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :thumb_title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :thumb_image, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :thumb_image, :class => "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :thumb_post, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :thumb_post, :class => "form-control", :rows => 4 %>
    </div>
  </div>
<table id="tasks">
  <%= f.fields_for :posts, :wrapper => false do |post| %>
    <tr class="fields">
    <td><%= post.text_field :image %></td><tr>
      <td><%= post.text_area :description, :rows => 4 %></td>
      <td><%= post.link_to_remove "Remove this task" %></td>
    </tr>
  <% end %>
</table>
<p><%= f.link_to_add "Add a task", :posts, :data => { :target => "#tasks" } %></p>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
