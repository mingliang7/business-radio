<div class="show-page">
<% @thumbnail.posts.each do |post|%>

	<h6><%= post.title %></h6>
	
		<span>
		<% if post.created_at > Time.now.beginning_of_day %>
			<%="#{time_ago_in_words(post.created_at)} ago"%> 
		<% else %> 
			<%= post.created_at.strftime("%b %d, %Y") %>
		<% end %>

		</span>
		
	</p>
		<%if(post.image).size != nil%>
		<div class="image"><%= image_tag post.image, size: "360x230"%></div>
		<% end %>
	<div class="desc"><%= post.description %></div>
	<% end %>

</div> 


