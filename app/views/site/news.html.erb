
<% @posts.each do |po| %>
    <%= link_to site_show_path(post_id: po) do%>
    <div class="news">
        <div class="col-lg-12">
        <hr style="margin-top:10px;margin-bottom:10px;">
        <div class="col-lg-6">
            <div class="po-image"><%= image_tag(po.image) %></div>
        </div>
        <div class="col-lg-6">
            <div class="po-title"><%= truncate(po.title,length: 60) %></div>
            <div class="po-desc"><%= truncate(po.description, length: 190) %> <%= link_to "អាន​បន្ត", style: "color:#1c7cb3;" %></div>
                <div class="align-time" style="font-size:12px;float:right;color:#1c7cb3;">
                <% if po.created_at > Time.now.beginning_of_day %>
                    <%="#{time_ago_in_words(po.created_at)} ago"%> 
                <% else %> 
                    <%= po.created_at.strftime("%b %d, %Y") %>
                <% end %>
                </div>
        </div>

        </div>

    </div>    
    <% end %>
<% end %>
