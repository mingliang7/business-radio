<%= render "layouts/carousel" %>
<h5 style="margin-bottom:0px;margin-top:20px;font-family: 'Preahvihear', cursive;">ពត៌មាន​ប្រចាំថ្ងៃ</h5>
<hr style="margin-top:10px;margin-bottom:10px;">
<div class="col-lg-12" style="padding:0px;">
	<% @posts.each do |p| %>
		<%= link_to site_show_path(post_id: p) do %>
			<div class="col-lg-6">
				<div class="box">
					<div class="box-img"><%= image_tag(p.image,size: "360x230") %></div>
					<div class="box-title"><%= truncate(p.title, length: 60) %></div>
				</div>
			</div>	
		<% end %>
	<% end %>
</div>
<div class="pagination text-centered">
<%= will_paginate(@posts, renderer: BootstrapPagination::Rails) %>
</div>